<Window x:Class="DownloadsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DownloadsManager.ViewModels"
        Title="MainWindow" Height="350" Width="587" 
        Background="#FF575757" WindowStyle="None" WindowState="Maximized">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainWindowVM}"/>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tabControl" Background="#FF575757" BorderBrush="Transparent" Margin="0,1,0,-1">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource TabItemsStyle}"/>
            </TabControl.Resources>
            <TabItem Header="ALL">
                <DataGrid ItemsSource="{Binding Downloads}" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="MUSIC"></TabItem>
            <TabItem Header="VIDEO"></TabItem>
            <TabItem Header="PICTURES"></TabItem>
            <TabItem Header="DOCUMENTS"></TabItem>
            <TabItem Header="APPLICATIONS"></TabItem>
            <TabItem Header="STATISTIC"></TabItem>
        </TabControl>
    </Grid>
</Window>
